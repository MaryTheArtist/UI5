<mvc:View controllerName="kpmg.com.Exercise4BookStore.controller.View1" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
						<VBox fitContainer="true">
							<Table  inset="false" items="{ path: 'bookstoreModel>/AuthorsSet'}"
								class="sapFDynamicPageAlignContent" width="auto">
								<columns>
									<Column width="12em">
										<Text text="Authors"/>
									</Column>
								</columns>
								<items>
									<ColumnListItem type="Navigation" press=".onListItemPress">
										<cells>
											<ObjectIdentifier title="{bookstoreModel>Author}"/>
										</cells>
									</ColumnListItem>
								</items>
							</Table>
						</VBox>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>